from datetime import datetime
import time
for i in range(10):
    print("current date: ",datetime.now().strftime("%H:%M:%S"))
    time.sleep(10)


print("\n")
fileName = input("Enter the File Name : ")
try:
    with open(fileName,'r') as file:
        line_no = 1
        for line in file:
            words = line.split()
            print(f"Line {line_no} ->Word Count {len(words)}")
            line_no += 1

except FileNotFoundError:
    print("Error : File not found")            


